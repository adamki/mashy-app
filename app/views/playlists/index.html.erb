<div class="row" id ="center-horizontal">

  <% if current_user %>
  <h3 class ="center"><%= current_user.name %>'s PlayLists</h3>

  <div class="col l3 s1">
  </div>

  <div class="col l6 s10 z-depth-5 center">
    <ul class="collection with-header">
      <% @spotify_service.find_users_playlists.each do |playlist| %>
      <li class="collection-item">
        <%= link_to "#{playlist.name}", playlist_path(playlist.id) %>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="col l3 s1">
  </div>
  <% end %>
</div>
